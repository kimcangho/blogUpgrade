<%- include("partials/header") -%>

<h1>Home is where the heart is. He stay.</h1>
<p><%= homeContent %></p>

<!-- forEach loop -->
<% postArray.forEach(function(post) { %>
<h2> <%= post.postTitle %> </h2>
<% if (post.postEntry.length > 100) { %>
<p> <%= post.postEntry.substring(0,99) + " ..." %> <a href="/posts/<%= post._id %>">Read More!</a></p>
<% } else { %>
<p> <%= post.postEntry %> <a href="/posts/<%= post._id %>">Read More!</a></p>
<% } %>

<% }); %>

<%- include("partials/footer") -%>
